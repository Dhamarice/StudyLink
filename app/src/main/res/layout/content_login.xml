<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="zw.co.dhamarice.www.studylink.Login"
    tools:showIn="@layout/activity_login">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:id="@+id/idcontainer">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/input_container"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/defaultpadding20"
        android:paddingRight="@dimen/defaultpadding20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:hint="username"
        android:padding="15dp"
        android:background="@drawable/roundcorner"
        android:layout_gravity="center_horizontal"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:hint="password"
        android:paddingTop="@dimen/defaultpadding20"
        android:padding="15dp"
        android:background="@drawable/roundcorner"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/btnwrap">
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="LOGIN"
            android:textColor="#ecf0f1"
            android:background="@drawable/default_rounded"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnlogin"
            android:layout_weight="1"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="forgot password"
            android:textSize="12dp"
            android:background="@drawable/offwhite"
            android:textColor="@color/colorPrimaryDark"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnforgot"
            android:layout_weight="1"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sign up"
            android:background="@drawable/offwhite"
            android:textColor="@color/colorPrimaryDark"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnSignUp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sl_inside_layout"
            android:layout_below="@+id/imageView"
            android:visibility="visible"
            android:orientation="vertical">





        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>
