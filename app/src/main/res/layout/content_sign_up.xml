<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="zw.co.dhamarice.www.studylink.SignUp"
    tools:showIn="@layout/activity_sign_up">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:id="@+id/signupcontainer">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signupimageView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"/>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="8dp"
                android:layout_below="@+id/signupimageView"
                tools:layout_editor_absoluteX="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/input_container"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/defaultpadding20"
                android:paddingRight="@dimen/defaultpadding20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/signupimageView"
                android:layout_centerHorizontal="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/firstname"
                    android:hint="First Name"
                    android:padding="15dp"
                    android:background="@drawable/roundcorner"
                    android:layout_gravity="center_horizontal"/>



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/surname"
                    android:hint="Surname"
                    android:paddingTop="@dimen/defaultpadding20"
                    android:padding="15dp"
                    android:background="@drawable/roundcorner"
                    android:layout_gravity="center_horizontal"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/email"
                    android:hint="Email"
                    android:padding="15dp"
                    android:background="@drawable/roundcorner"
                    android:layout_gravity="center_horizontal"/>



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/institute"
                    android:hint="Intsitute"
                    android:paddingTop="@dimen/defaultpadding20"
                    android:padding="15dp"
                    android:background="@drawable/roundcorner"
                    android:layout_gravity="center_horizontal"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/suusername"
                    android:layout_marginTop="10dp"
                    android:hint="username"
                    android:padding="15dp"
                    android:background="@drawable/roundcorner"
                    android:layout_gravity="center_horizontal"/>



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/supassword"
                    android:inputType="textPassword"
                    android:hint="password"
                    android:paddingTop="@dimen/defaultpadding20"
                    android:padding="15dp"
                    android:background="@drawable/roundcorner"
                    android:layout_gravity="center_horizontal"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/supasswordcnf"
                    android:inputType="textPassword"
                    android:hint="confirm password"
                    android:paddingTop="@dimen/defaultpadding20"
                    android:padding="15dp"
                    android:background="@drawable/roundcorner"
                    android:layout_gravity="center_horizontal"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Country:"
        android:textSize="17dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimaryDark"/>

                <Spinner
                    android:id="@+id/countryspinner"
                    android:layout_width="wrap_content"
                    android:autofillHints="Select Country"
                    android:layout_height="41dp"
                    android:dropDownWidth="200dp"/>
</LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Level:"
                        android:textSize="17dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <Spinner
                        android:id="@+id/levelspinner"
                        android:layout_width="wrap_content"
                        android:autofillHints="Select Level"
                        android:layout_height="41dp"
                        android:dropDownWidth="200dp"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Industry:"
                        android:textSize="17dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryDark"/>
                <Spinner
                    android:id="@+id/industryspinner"
                    android:autofillHints="Select Industry"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:dropDownWidth="200dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Program:"
                        android:textSize="17dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryDark"/>

                <Spinner
                    android:id="@+id/programspinner"
                    android:layout_width="wrap_content"
                    android:autofillHints="Select Program"
                    android:layout_height="41dp"
                    android:dropDownWidth="200dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/btnwrap">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="SIGN UP"
                        android:textColor="#ecf0f1"
                        android:background="@drawable/default_rounded"
                        android:padding="15dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/btnsignupp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

        </RelativeLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
